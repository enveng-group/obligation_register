{
    "version": "2.0.0",
    "tasks": [{
        "label": "Build with Make",
        "type": "shell",
        "command": "make",
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": ["$gcc"]
    },
    {
      "label": "Run Clang-Format",
      "type": "shell",
      "command": "clang-format -i src/*.c",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Run Clang-Tidy",
      "type": "shell",
      "command": "clang-tidy src/*.c --",
      "group": "test",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Run Cppcheck",
      "type": "shell",
      "command": "cppcheck --enable=all --inconclusive --std=c11 --language=c --suppress=missingIncludeSystem --include=include --checkers-report=checkers_report.txt src/ include/",
      "group": "test",
      "problemMatcher": ["$gcc"]
    }
  ]
}
