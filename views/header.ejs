{% load static %} <!-- Load Django's static file handling -->

<header class="header">
    <!-- Main header section -->
    <div class="overlap">
        <div class="text-wrapper">Environmental Compliance Management System</div>
        <!-- Title of the system -->
        <img class="enveng-logo" src="{% static 'img/enveng-logo-1.svg' %}"/>
        <!-- Logo of the environmental compliance system -->
        <div class="overlap-group">
            <div class="avatar-block">
                <div class="avatar">
                    <img src="{% static 'img/shape-1.png'%}"
                         style="height: 90%;width: auto;border-radius: 50%;margin: 4% auto;" alt="">
                    <!-- User avatar image -->
                </div>
                <div class="info">
                    <div class="text-wrapper-2">Title</div>
                    <!-- Placeholder for user title -->
                    <div class="text-wrapper-3">Description</div>
                    <!-- Placeholder for user description -->
                </div>
            </div>
            <div class="settings">
                <img class="enveng-logo"
                     style="height: 90%;width: auto;border-radius: 50%;margin: 4% auto;"
                     src="{% static 'img/settings-1.svg' %}"/>
                <!-- Settings icon -->
            </div>
            <img class="help-circle" src="{% static 'img/help-circle.svg' %}"/>
            <!-- Help icon -->
        </div>
    </div>
    <div class="navigation-bar-wrapper">
        <div class="navigation-bar">
            <div class="overlap-group-2">
                <div class="div-wrapper">
                    <div class="text-wrapper-4"><a href="/responsible">Responsible</a></div>
                    <!-- Navigation link to Responsible page -->
                </div>
                <div class="text-wrapper-5"><a href="/forms">Forms</a></div>
                <!-- Navigation link to Forms page -->
                <div class="text-wrapper-6"><a href="/dashboard">Dashboard</a></div>
                <!-- Navigation link to Dashboard page -->
            </div>
        </div>
    </div>
</header>
