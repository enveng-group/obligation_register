# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.html]
indent_size = 2

[*.{css,scss}]
indent_size = 2

[*.sql]
indent_size = 2

[*.c]
indent_style = space
indent_size = 4

[*.h]
indent_style = space
indent_size = 4
